#pragma once

#include <windows.h>

namespace sokira
{
	namespace le
	{

class CMutexImpl
{
	public:
		CMutexImpl(bool recursive = false)
		{
			InitializeCriticalSection(&mMutex);
		}

		~CMutexImpl()
		{
			DeleteCriticalSection(&mMutex);
		}

		void lock()
		{
			EnterCriticalSection(&mMutex);
		}

		void unlock()
		{
			LeaveCriticalSection(&mMutex);
		}

	private:
		CRITICAL_SECTION mMutex;
};

	} // namespace le
} // namespace sokira
